  <body class="container">
    <div
      class="d-flex justify-content-center align-items-center"
      style="height: 100vh"
    >
      <form
        action="/add/username"
        method="post"
        class="border"
        style="width: 30vw; padding: 20px"
      >
        <input
          type="text"
          placeholder="Enter Your Username"
          name="username"
          class="form-control w-full"
        /><br />
        <input
          type="submit"
          value="Save Name"
          class="btn btn-info mx-2"
          style="width: 99%"
        />
      </form>
    </div>
  </body>
